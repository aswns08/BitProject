<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- <sql> 태그 사용하기
=> 자주 사용되는 SQL문은 별도로 정의해두고 포함한다.
-->

<mapper namespace="java63.web03.dao.StorageDao">

  <!-- 객체의 컬럼과 프로퍼티를 연결한다. -->
  <resultMap type="Storage" id="storageMap">
    <!-- PK 컬럼은 id 태그를 사용하여 지정한다. -->
    <id column="SNO" property="sno"/>
    <result column="CATEGORY" property="category"/>
    <result column="SDATE" property="sDate"/>
    <result column="LINK" property="link"/>
    <result column="PRICE" property="price"/>
    <result column="TITLE" property="title"/>
    <result column="IMG_URL" property="imgUrl"/>
  </resultMap>
  
  <sql id="storageSelect">
    SELECT SNO, CATEGORY, SDATE, LINK, PRICE, TITLE, IMG_URL 
    FROM STORAGE
  </sql>
  
  <select id="selectList" parameterType="map" 
        resultMap="storageMap">
    SELECT 
		  SNO, 
		  CATEGORY, 
		  SDATE, 
		  LINK,
		  PRICE,
		  TITLE,
		  IMG_URL
		FROM STORAGE 
    <if test="pageSize > 0">
      limit #{startIndex}, #{pageSize}
    </if>
  </select>
  
  <select id="selectOne" parameterType="int" resultMap="storageMap">
    <include refid="storageSelect"/> 
    WHERE SNO=#{value}
  </select>
  
  <select id="totalSize" resultType="int">
    SELECT count(SNO) FROM STORAGE
  </select>
  
  <insert id="insert" parameterType="Product"
    useGeneratedKeys="true" keyColumn="PNO" keyProperty="no">
    INSERT INTO PRODUCTS(PNAME,QTY,MKNO,MADE_DATE) 
    VALUES (#{name},#{quantity},#{makerNo},#{madeDate})
  </insert>
  
  <update id="update" parameterType="Product">
    UPDATE PRODUCTS SET 
      PNAME=#{name},
      QTY=#{quantity},
      MKNO=#{makerNo},
      MADE_DATE=#{madeDate} 
    WHERE PNO=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    DELETE FROM PRODUCTS WHERE PNO=#{value}
  </delete>
  
  <insert id="insertPhoto" parameterType="Product">
    INSERT INTO PROD_PHOTS(PNO,URL) 
    VALUES (#{no}, #{photo})
  </insert>
  
  <select id="selectPhoto" parameterType="int" 
      resultMap="productPhotoMap">
    SELECT PPNO, PNO, URL
    FROM PROD_PHOTS
    <if test="value > 0">
    WHERE PNO = #{value}
    </if>
  </select>
  
  <delete id="deletePhoto" parameterType="int">
    DELETE FROM PROD_PHOTS
    WHERE PNO=#{value}
  </delete>
  
  
</mapper>



















