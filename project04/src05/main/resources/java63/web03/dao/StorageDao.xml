<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- <sql> 태그 사용하기
=> 자주 사용되는 SQL문은 별도로 정의해두고 포함한다.
-->

<mapper namespace="java63.web03.dao.StorageDao">

  <!-- 객체의 컬럼과 프로퍼티를 연결한다. -->
  <resultMap type="Storage" id="storageMap">
    <!-- PK 컬럼은 id 태그를 사용하여 지정한다. -->
    <id column="SNO" property="sno"/>
    <result column="CATEGORY" property="category"/>
    <result column="SDATE" property="sdate"/>
    <result column="LINK" property="link"/>
    <result column="UNO" property="uno"/>
    <result column="PRICE" property="price"/>
    <result column="TITLE" property="title"/>
    <result column="IMG_URL" property="img_url"/>
    <result column="DOCID" property="docid"/>
  </resultMap>
  
  
 <!--  <sql id="storageSelect">
    SELECT CATEGORY, SDATE, LINK, UNO, PRICE, TITLE, IMG_URL, DOCID
    FROM STORAGE
  </sql> -->
  
  <sql id="storageSelect">
    SELECT SNO,CATEGORY,SDATE,LINK,UNO,PRICE,TITLE,IMG_URL,DOCID
    FROM STORAGE
  </sql> 
  
  <select id="selectList" parameterType="map" 
        resultMap="storageMap">
    SELECT 
    SNO,CATEGORY,SDATE,LINK,UNO,PRICE,TITLE,IMG_URL,DOCID
    FROM STORAGE
    ORDER BY SNO DESC
    <if test="pageSize > 0">
      limit #{startIndex}, #{pageSize}
    </if>
  </select>
  
  <select id="totalSize" resultType="int">
    SELECT count(SNO) FROM STORAGE
    <!-- WHERE UNO=#{value} -->
  </select>
  
  
  <select id="selectOne" parameterType="String" resultMap="storageMap">
    <include refid="storageSelect"/> 
    WHERE DOCID=#{value}
  </select> 
  
<!--   <select id="selectOne" parameterType="String">
      SELERT SNO
      FROM STORAGE
      WHERE DOCID=#{docid}
  </select> -->

  
  <insert id="insert" parameterType="Storage"
    useGeneratedKeys="true" keyColumn="SNO" keyProperty="sno">
    INSERT INTO STORAGE(CATEGORY,SDATE,LINK,UNO,PRICE,TITLE,IMG_URL,DOCID) 
    VALUES (#{category},#{sdate},#{link},#{uno},#{price},#{title},#{img_url},#{docid})
  </insert>
  
  <update id="update" parameterType="Storage">
    UPDATE STORAGE SET 
      CATEGORY=#{category},
      SDATE=#{sdate},
      LINK=#{link},
      UNO=#{uno},
      PRICE=#{price},
      TITLE=#{title},
      IMG_URL=#{img_url}
    WHERE SNO=#{sno}
  </update>
  
  <delete id="delete" parameterType="String">
    DELETE FROM STORAGE WHERE DOCID=#{value}
  </delete>
  
  
</mapper>



















